/**index.wxss**/

page {
  background-color: #f6f6f6;
  width: 100%;
  height: 100%;
}

swiper {
  width: 100%;
}

swiper-item image {
  width: 100%;
}

/**功能导航**/

.main-core {
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  padding: 15rpx 0rpx;
  min-height: 350rpx;
  overflow: hidden;
}

.main-core-item {
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 20%;
  height: 170rpx;
}

.core-item-nameText {
  font-size: 14px;
}

.main-core-item.disabled {
  color: #9c9c9c;
}

.core-item-icon {
  display: block;
  width: 85rpx;
  height: 85rpx;
  margin: 15rpx auto;
}

.core-item-name {
  display: block;
  margin: 5rpx;
}

.main-swpier {
  height: 390rpx;
  margin-bottom: 20rpx;
}

.main-swpier .wx-swiper-dots.wx-swiper-dots-horizontal {
  bottom: 0;
  margin-bottom: 15rpx;
}

/**公告**/

.main-notices {
  width: 100%;
  margin: 10px 0;
  background-color: #fff;
  border-radius: 2px;
  overflow: hidden;
  background-image: url('https://xyz.125520.xyz/images/bg/bg.png');
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-position: bottom;
}

.header_title {
  color: #333;
}

.main-notices-icon {
  width: 35px;
  height: 35px;
}

.main-notices-text {
  font-size: 14px;
  color: #595959;
}

.main-notices-item {
  width: 100%;
}

.weui-cell {
  padding: 5px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

/**统计绑定用户数**/

.main-total {
  width: 100%;
  margin: 10px 0;
  background-color: #fff;
  border-radius: 2px;
  overflow: hidden;
  background-image: url('https://xyz.125520.xyz/images/bg/bg2.png');
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-position: bottom;
}

.main-total-userTotal_view {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  height: 120rpx;
}

.main-total-userTotal_text1 {
  color: #fc0;
  font-size: 48px;
  font-weight: bold;
  padding: 0 10px;
}

.main-total-userTotal_text2 {
  color: #999;
  font-size: 16px;
  font-weight: bold;
  margin-bottom: -36rpx;
}

/**其他**/

.main-itf {
  width: 100%;
  margin: 10px 0;
  border-radius: 2px;
  overflow: hidden;
  background-image: url('https://xyz.125520.xyz/images/bg/bg3.png');
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-position: center;
}

/* 广告 */

.adContainer {
  width: 100%;
}
