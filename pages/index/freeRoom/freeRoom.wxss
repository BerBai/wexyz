@import '../../../sky.wxss';

.text {
  font-size: 14px;
}

/* ==========================================================================
   main-roomUl
 ============================================================================ */

.main-roomUl {
  display: flex;
  flex-flow: column nowrap;
  padding: 30rpx 45rpx;
}

.roomUl-floor {
  display: flex;
  width: 600rpx;
  flex-flow: column nowrap;
  margin-top: 20rpx;
  padding: 0 0 0 65rpx;
  /*background: url('/images/core/kjs/classroom-icon.png') no-repeat;*//*微信暂不支持静态bgimg文件，改用服务器url*/
  background: url('https://we.cqu.pt/app/images/core/kjs/classroom-icon.png') no-repeat;
  background-size: 30rpx 25rpx;
  background-position: 15rpx 8rpx;
}

.floor {
  flex: 1;
  width: 600rpx;
  display: flex;
  flex-wrap: wrap;
}

.floor text {
  padding-bottom: 25rpx;
  width: 120rpx;
  font-size: 11pt;
  letter-spacing: 0.1rem;
  text-align: center;
}

.footer {
  display: flex;
  flex-direction: column;
  font-size: 9pt;
  line-height: 150%;
  text-align: center;
  padding: 100rpx 0 15rpx;
  color: #c2c2c2;
  
}
